{
    "app-id": "org.gnome.frogr",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.30",
    "sdk": "org.gnome.Sdk",
    "command": "frogr",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        /* Needs to talk to the network: */
        "--share=network",
        /* Access your pictures and videos */
        "--filesystem=xdg-pictures", "--filesystem=xdg-videos",
        /* Access your documents is useful too (e.g. for saving and loading projects) */
        "--filesystem=xdg-documents",
        /* Needed for dconf to work */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup": [ "/share/man" ],
    "modules": [
        {
            "name": "frogr",
            "buildsystem": "meson",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/frogr.git",
                    "branch": "RELEASE_1.5",
                    "commit": "2f4ae562fbc8c99dd0ac8c4ee5039ed87a06ec43"
                }
            ]
        }
    ]
}
